<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Projet1.Panels.PanelAcceuil"
             xmlns:controls="clr-namespace:Projet1.Controls" 
             xmlns:local="clr-namespace:Projet1.Entite"  
             xmlns:conv="clr-namespace:Projet1.Utils"
             Background="Gray">
    <UserControl.Resources>
        <conv:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter" />
    </UserControl.Resources>
    <DockPanel>
        <Border DockPanel.Dock="Left" Width="200" Background="LightGray" HorizontalAlignment="Center" Padding="10">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Filtres" FontWeight="Bold" FontSize="30" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                
                <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,10">
                    <StackPanel>
                        <TextBlock Text="Filtrer par prix:" Margin="0,10" HorizontalAlignment="Center"/>
                        <Slider x:Name="PriceSlider" TickFrequency="10" Value="{Binding SelectedPrice, Mode=TwoWay}" IsSnapToTickEnabled="False"/>
                        <TextBlock Text="{Binding SelectedPrice, StringFormat={}{0} €}" HorizontalAlignment="Center" Margin="0,10"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,10">
                    <StackPanel>
                        <TextBlock Text="Filtrer par catégorie:" Margin="0,10" HorizontalAlignment="Center"/>
                        <Button Content="Filtrer par catégorie" Margin="0,5" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        
        <Border Padding="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Spacing="20" Margin="20">
                <TextBlock Text="À Ma Zone !" 
                           FontSize="24" 
                           HorizontalAlignment="Center" 
                           Foreground="Black"/>
                
                <TextBlock x:Name="StatusMessage" 
                           HorizontalAlignment="Center" 
                           Foreground="Green"/>

                <TextBlock Text="Liste d'articles:" 
                           Margin="0,10" 
                           HorizontalAlignment="Center" 
                           FontWeight="Bold"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Height="500" Margin="0,0,0,20">
                    <ItemsControl ItemsSource="{Binding LesArticles}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="200" ItemHeight="250" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="local:Article">
                                <Button HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Click="OnArticleClick">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Border Margin="10"
                                                    CornerRadius="5"
                                                    BorderBrush="Gray"
                                                    BorderThickness="1"
                                                    Padding="10">
                                                <StackPanel Orientation="Vertical" Spacing="10">
                                                    <TextBlock Text="{Binding Nom}" 
                                                            FontWeight="Bold" 
                                                            HorizontalAlignment="Center" 
                                                            FontSize="18"
                                                            Foreground="Black" />
                                                    <Image Source="{Binding DataImage, Converter={StaticResource ByteArrayToImageConverter}}"
                                                        Height="150" Width="150" HorizontalAlignment="Center" />
                                                    <TextBlock Text="{Binding Prix, StringFormat={}{0} €}" 
                                                            Foreground="Black" 
                                                            HorizontalAlignment="Center" />
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Border>
    </DockPanel>
</UserControl>
